<%= render 'header/linkheader' %>
    <div class="container text">

        <%= notice %>
        <div class="d-flex w-100 justify-content-between">
        <h1 class="text-light">Lista de comida</h1>

            <a href="/formularios/new" class="btn text-white m-3"><h1><i class="bi bi-plus-circle-dotted"></i></h1></a>
            <a href="/lista.pdf" class="btn text-white m-3" target="_blank"><h1><i class="bi bi-printer-fill"></i></h1></a>
        </div>

            <div class="row">

                <div class="col-md-4">
                  <div class="card bg-success text-white" style="border-radius: 10%">
                    <div class="card-body mx-4">
                      <div class="container">
                        <p class="my-5 mx-5" style="font-size: 30px;">Total: <%=@total%></p>
                        <div class="row">

                          <hr>
                          <div class="col-xl-10 ">
                            <p>Normal</p>
                          </div>
                          <div class="col-xl-2">
                            <p class="float-end"><%=@normal%>
                            </p>
                          </div>
                          <hr>
                        </div>
                        <div class="row">
                          <div class="col-xl-10">
                            <p>Pechuga</p>
                          </div>
                          <div class="col-xl-2">
                            <p class="float-end"><%=@pechuga%>
                            </p>
                          </div>
                          <hr>
                        </div>
                        <div class="row">
                          <div class="col-xl-10">
                            <p>Ensalada</p>
                          </div>
                          <div class="col-xl-2">
                            <p class="float-end"><%=@enchiladas%>
                            </p>
                          </div>
                          <hr>
                        </div>
                        <div class="row">
                          <div class="col-xl-10">
                            <p>Comidas canceladas</p>
                          </div>
                          <div class="col-xl-2">
                            <p class="float-end"><%=@cancelada%>
                            </p>
                          </div>

                          <hr style="border: 2px solid black;">
                        </div>

                      </div>
                    </div>
                  </div>
                    <br>
                    <br>
                  <div class="card bg-secondary text-white" style="border-radius: 10%">
                    <div class="card-body mx-4">
                      <div class="container">
                        <p class="my-5 mx-5" style="font-size: 20px;">Total PL1: <%=@total_pl1%></p>
                        <div class="row">

                          <hr>
                          <div class="col-xl-10 ">
                            <p>Normal</p>
                          </div>
                          <div class="col-xl-2">
                            <p class="float-end"><%=@normal_pl1%>
                            </p>
                          </div>
                          <hr>
                        </div>
                        <div class="row">
                          <div class="col-xl-10">
                            <p>Pechuga</p>
                          </div>
                          <div class="col-xl-2">
                            <p class="float-end"><%=@pechuga_pl1%>
                            </p>
                          </div>
                          <hr>
                        </div>
                        <div class="row">
                          <div class="col-xl-10">
                            <p>Ensalada</p>
                          </div>
                          <div class="col-xl-2">
                            <p class="float-end"> <%=@enchiladas_pl1%>
                            </p>
                          </div>
                          <hr>
                        </div>

                        <div class="row">
                          <div class="col-xl-10">
                            <p>Comidas canceladas</p>
                          </div>
                          <div class="col-xl-2">
                            <p class="float-end"><%=@cancelada_pl1%>
                            </p>
                          </div>

                          <hr style="border: 2px solid black;">
                        </div>

                      </div>
                    </div>
                  </div>
                    <br>
                    <br>
                  <div class="card bg-light text-dark" style="border-radius: 10%">
                    <div class="card-body mx-4">
                      <div class="container">
                        <p class="my-5 mx-5" style="font-size: 20px;">Total PL2: <%=@total_pl2%></p>
                        <div class="row">

                          <hr>
                          <div class="col-xl-10 ">
                            <p>Normal</p>
                          </div>
                          <div class="col-xl-2">
                            <p class="float-end"><%=@normal_pl2%>
                            </p>
                          </div>
                          <hr>
                        </div>
                        <div class="row">
                          <div class="col-xl-10">
                            <p>Pechuga</p>
                          </div>
                          <div class="col-xl-2">
                            <p class="float-end"><%=@pechuga_pl2%>
                            </p>
                          </div>
                          <hr>
                        </div>
                        <div class="row">
                          <div class="col-xl-10">
                            <p>Ensalada</p>
                          </div>
                          <div class="col-xl-2">
                            <p class="float-end"><%=@enchiladas_pl2%>
                            </p>
                          </div>
                          <hr>
                        </div>

                        <div class="row">
                          <div class="col-xl-10">
                            <p>Comidas canceladas</p>
                          </div>
                          <div class="col-xl-2">
                            <p class="float-end"><%= @cancelada_pl2 %>
                            </p>
                          </div>

                          <hr style="border: 2px solid black;">
                        </div>

                      </div>
                    </div>
                  </div>
                </div>

                <div class="list-group col-md-8">

                      <ul class="nav " id="myTab" role="tablist">
                        <li class="nav-item m-1" role="presentation">
                          <button class="btn btn-outline-light active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true"><h5>Lista PL1</h5></button>
                        </li>
                        <li class="nav-item m-1" role="presentation">
                          <button class="btn btn-outline-light" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false"><h5>Lista PL2</h5></button>
                        </li>

                      </ul>
                      <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <input class="form-control m-1" type="text" id="filtersearch" value="" placeholder="Buscar Empleado PL1"/>
                        <% @formularios.each do |p| %>
                        <div class="list-group-item bg-black text-white opacity-75 border border-white ms-1 pl1">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">
                                    <%= p.nombre %>
                                </h5>
                                <small>
                                    <%= p.fecha %>
                                </small>
                            </div>
                            <p class="mb-1">
                                <%= p.entrada %>
                            </p>
                            <a href="<%= edit_formulario_path(p) %>" class="btn btn-primary"><i
                                    class="bi bi-pencil-square"></i></a>
                            <%=link_to "" , formulario_path(p), method: "delete" ,
                                class: "btn btn-danger bi bi-trash3-fill" %>
                        </div>
                        <%end%>
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <input class="form-control m-1" type="text" id="filtersearch2" value="" placeholder="Buscar Empleado PL2"/>
                        <% @formularios2.each do |p| %>
                        <div class="list-group-item bg-black text-white opacity-75 border border-white ms-1 pl2">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">
                                    <%= p.nombre %>
                                </h5>
                                <small>
                                    <%= p.fecha %>
                                </small>
                            </div>
                            <p class="mb-1">
                                <%= p.platillo %>
                            </p>
                            <a href="<%= edit_formulario_path(p) %>" class="btn btn-primary"><i
                                    class="bi bi-pencil-square"></i></a>
                            <%=link_to "" , formulario_path(p), method: "delete" ,
                                class: "btn btn-danger bi bi-trash3-fill" %>
                        </div>
                    <%end%>
                        </div>

                      </div>
                </div>

            </div>

    </div>
